{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rationale Schema",
  "description": "Schema for a Rationale object used in the Strategic Response Model to explain the reasoning behind strategic responses",
  "type": "object",
  "properties": {
    "rationaleID": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the rationale"
    },
    "rationaleTitle": {
      "type": "string",
      "description": "Title or summary of the rationale"
    },
    "description": {
      "type": "string",
      "description": "A detailed explanation of the rationale supporting a strategic response"
    },
    "triggerReference": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the trigger that prompted this rationale"
    },
    "linkedDomains": {
      "type": "array",
      "description": "List of business architecture domains influenced or justified by this rationale",
      "items": {
        "type": "string",
        "enum": [
          "Strategy",
          "Capabilities",
          "Initiatives",
          "Policy",
          "Information",
          "Performance",
          "Products",
          "Services",
          "Stakeholder",
          "Value_Stream"
        ]
      }
    },
    "primaryDriver": {
      "type": "string",
      "description": "Primary category for the rationale",
      "enum": [
        "Risk_Mitigation",
        "Compliance_Requirement",
        "Market_Opportunity",
        "Executive_Mandate",
        "Performance_Insight",
        "Stakeholder_Need",
        "Cost_Optimization",
        "Innovation",
        "Quality_Improvement",
        "Other"
      ]
    },
    "reasoningPattern": {
      "type": "string",
      "description": "The logical structure of the rationale",
      "enum": [
        "Causal",
        "Comparative",
        "Normative",
        "Predictive",
        "Analogical",
        "Deductive",
        "Inductive"
      ]
    },
    "evidenceBase": {
      "type": "string",
      "description": "The foundation for the rationale",
      "enum": [
        "Data_Driven",
        "Expert_Judgment",
        "Regulatory_Requirement",
        "Industry_Best_Practice",
        "Customer_Feedback",
        "Internal_Analysis",
        "External_Research",
        "Competitive_Analysis"
      ]
    },
    "strategicAlignment": {
      "type": "string",
      "description": "How the rationale connects to organizational strategy",
      "enum": [
        "Direct_Support",
        "Indirect_Enablement",
        "Risk_Mitigation",
        "Compliance_Fulfillment",
        "Capability_Enhancement",
        "Strategic_Pivot"
      ]
    },
    "businessValueType": {
      "type": "string",
      "description": "The nature of value creation or preservation",
      "enum": [
        "Cost_Reduction",
        "Revenue_Growth",
        "Risk_Reduction",
        "Customer_Experience",
        "Operational_Efficiency",
        "Competitive_Advantage",
        "Regulatory_Compliance"
      ]
    },
    "dateCreated": {
      "type": "string",
      "format": "date",
      "description": "The date the rationale was first recorded"
    },
    "author": {
      "type": "string",
      "description": "The person or team who documented the rationale"
    },
    "orgUnitTitle": {
      "type": "string",
      "description": "The organizational unit that owns or authored the rationale"
    },
    "relatedRationales": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "References to other related rationales"
    }
  },
  "required": [
    "rationaleID",
    "rationaleTitle",
    "description",
    "triggerReference",
    "primaryDriver"
  ]
}
