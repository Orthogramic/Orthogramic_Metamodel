{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://orthogramic.org/schema/rationale.json",
  "title": "rationale",
  "type": "object",
  "required": ["rationaleID", "rationaleTitle", "description", "triggerReference", "rationaleType"],
  "properties": {
    "rationaleID": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the rationale"
    },
    "rationaleTitle": {
      "type": "string",
      "description": "Title or summary of the rationale"
    },
    "description": {
      "type": "string",
      "description": "Detailed explanation supporting a strategic response"
    },
    "triggerReference": {
      "type": "string",
      "format": "uuid",
      "description": "Primary trigger this rationale responds to"
    },
    "triggerReferences": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Optional multiple triggers this rationale addresses"
    },
    "linkedDomains": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Strategy",
          "Capabilities",
          "Initiatives",
          "Policy",
          "Information",
          "Performance",
          "Products",
          "Services",
          "Stakeholder",
          "Value_Stream"
        ]
      },
      "description": "Domains supported by this rationale"
    },
    "rationaleType": {
      "type": "string",
      "enum": [
        "Preventative",
        "Remedial",
        "Opportunistic",
        "Proactive",
        "Reactive",
        "Compliance_Fulfillment",
        "Strategic_Advancement"
      ],
      "description": "Type of rationale"
    },
    "reasoningPattern": {
      "type": "string",
      "enum": [
        "Causal",
        "Comparative",
        "Normative",
        "Predictive",
        "Analogical",
        "Deductive",
        "Inductive"
      ],
      "description": "Reasoning structure"
    },
    "evidenceBase": {
      "type": "string",
      "enum": [
        "Data_Driven",
        "Expert_Judgment",
        "Industry_Best_Practice",
        "Customer_Feedback",
        "Internal_Analysis",
        "External_Research",
        "Competitive_Analysis"
      ],
      "description": "Evidence base used"
    },
    "strategicObjectiveReference": {
      "type": "string",
      "format": "uuid",
      "description": "Strategic objective this rationale supports"
    },
    "businessValueType": {
      "type": "string",
      "enum": [
        "Cost_Reduction",
        "Revenue_Growth",
        "Risk_Reduction",
        "Customer_Experience",
        "Operational_Efficiency",
        "Competitive_Advantage",
        "Brand_Perception",
        "Stakeholder_Trust"
      ],
      "description": "Value outcome intended"
    },
    "dateCreated": {
      "type": "string",
      "format": "date",
      "description": "Date this rationale was recorded"
    },
    "lastReviewed": {
      "type": "string",
      "format": "date",
      "description": "Most recent date of rationale review"
    },
    "effectivenessRating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Optional evaluation score for rationale effectiveness"
    },
    "author": {
      "type": "string",
      "description": "Person or team who created the rationale"
    },
    "orgUnitTitle": {
      "type": "string",
      "description": "Unit responsible for or benefiting from this rationale"
    },
    "relatedRationales": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Related rationale references"
    },
    "relationshipTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["supports", "contradicts", "expands", "duplicates", "supersedes"]
      },
      "description": "Types of relationships to related rationales"
    }
  }
}
