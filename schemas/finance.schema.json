{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orthogramic.github.io/Orthogramic_Metamodel/schemas/finance.schema.json",
  "title": "Orthogramic Finance Domain Schema",
  "description": "Finance domain objects definition and relationships",
  "type": "object",
  "required": ["domainInfo", "definitions", "relationships"],
  "properties": {
    "domainInfo": {
      "type": "object",
      "properties": {
        "domainName": {
          "const": "finance"
        },
        "domainPrefix": {
          "const": "fin:"
        },
        "description": {
          "const": "Finance domain for managing financial elements and structures"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      },
      "required": ["domainName", "domainPrefix", "description", "version"]
    },
    "definitions": {
      "$ref": "#/$defs/financeDefinitions"
    },
    "relationships": {
      "$ref": "#/$defs/financeRelationships"
    },
    "crossDomainRelationships": {
      "$ref": "#/$defs/crossDomainRelationships"
    }
  },
  "$defs": {
    "financeDefinitions": {
      "type": "object",
      "properties": {
        "costElement": {
          "type": "object",
          "required": ["id", "name", "category", "amount"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^ce:[a-z0-9-]+$"
            },
            "name": {
              "type": "string",
              "minLength": 2,
              "maxLength": 100
            },
            "description": {
              "type": "string",
              "maxLength": 500
            },
            "category": {
              "type": "string",
              "enum": ["direct", "indirect", "fixed", "variable", "capital", "operational"]
            },
            "amount": {
              "type": "number",
              "minimum": 0
            },
            "currency": {
              "type": "string",
              "pattern": "^[A-Z]{3}$"
            },
            "period": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
            },
            "status": {
              "type": "string",
              "enum": ["active", "planned", "completed", "cancelled"]
            }
          }
        },
        "revenueStream": {
          "type": "object",
          "required": ["id", "name", "type", "amount"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^rs:[a-z0-9-]+$"
            },
            "name": {
              "type": "string",
              "minLength": 2,
              "maxLength": 100
            },
            "description": {
              "type": "string",
              "maxLength": 500
            },
            "type": {
              "type": "string",
              "enum": ["recurring", "one-time", "transaction", "subscription", "license", "service"]
            },
            "amount": {
              "type": "number",
              "minimum": 0
            },
            "currency": {
              "type": "string",
              "pattern": "^[A-Z]{3}$"
            },
            "period": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
            },
            "status": {
              "type": "string",
              "enum": ["active", "projected", "realized", "cancelled"]
            }
          }
        },
        "budget": {
          "type": "object",
          "required": ["id", "name", "type", "total", "period"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^bud:[a-z0-9-]+$"
            },
            "name": {
              "type": "string",
              "minLength": 2,
              "maxLength": 100
            },
            "description": {
              "type": "string",
              "maxLength": 500
            },
            "type": {
              "type": "string",
              "enum": ["operational", "capital", "project", "departmental"]
            },
            "total": {
              "type": "number",
              "minimum": 0
            },
            "allocated": {
              "type": "number",
              "minimum": 0
            },
            "spent": {
              "type": "number",
              "minimum": 0
            },
            "currency": {
              "type": "string",
              "pattern": "^[A-Z]{3}$"
            },
            "period": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "string",
                  "format": "date"
                },
                "end": {
                  "type": "string",
                  "format": "date"
                }
              },
              "required": ["start", "end"]
            },
            "status": {
              "type": "string",
              "enum": ["draft", "approved", "active", "closed", "overrun"]
            }
          }
        },
        "financialKPI": {
          "type": "object",
          "required": ["id", "name", "category", "formula"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^fkpi:[a-z0-9-]+$"
            },
            "name": {
              "type": "string",
              "minLength": 2,
              "maxLength": 100
            },
            "description": {
              "type": "string",
              "maxLength": 500
            },
            "category": {
              "type": "string",
              "enum": ["profitability", "liquidity", "efficiency", "leverage", "growth"]
            },
            "formula": {
              "type": "string"
            },
            "target": {
              "type": "number"
            },
            "current": {
              "type": "number"
            },
            "unit": {
              "type": "string"
            },
            "frequency": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
            },
            "status": {
              "type": "string",
              "enum": ["active", "inactive", "draft"]
            }
          }
        }
      },
      "required": ["costElement", "revenueStream", "budget", "financialKPI"]
    },
    "financeRelationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "type"],
        "properties": {
          "from": {
            "type": "string",
            "pattern": "^(ce|rs|bud|fkpi):[a-z0-9-]+$"
          },
          "to": {
            "type": "string",
            "pattern": "^(ce|rs|bud|fkpi):[a-z0-9-]+$"
          },
          "type": {
            "type": "string",
            "enum": [
              "allocated_to",
              "contributes_to",
              "part_of",
              "impacts",
              "measures",
              "determines",
              "funds",
              "derives_from"
            ]
          },
          "metadata": {
            "type": "object",
            "properties": {
              "percentage": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              },
              "priority": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              },
              "effectiveDate": {
                "type": "string",
                "format": "date"
              },
              "expiryDate": {
                "type": "string",
                "format": "date"
              }
            }
          }
        }
      }
    },
    "crossDomainRelationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "type"],
        "properties": {
          "from": {
            "type": "string",
            "pattern": "^(ce|rs|bud|fkpi):[a-z0-9-]+$"
          },
          "to": {
            "type": "string",
            "pattern": "^(pr|rd|cap|pd|svc|tech|platform|infra|app|as|team|role|skill|partner|unit|mkt|cs|vp|camp|ch|proc|proj|port|risk|ctrl|dec|kpi|metric|obj|strat|init|pol|ctrl|audit|assess|iss|incident|sc|threat|vuln|mon|qm|qs|qi|qd|qp):[a-z0-9-]+$"
          },
          "type": {
            "type": "string",
            "enum": [
              "funds",
              "supports",
              "impacts",
              "drives",
              "enables",
              "allocates_to",
              "measures",
              "validates",
              "influences",
              "determined_by",
              "constrains",
              "optimizes",
              "informs",
              "requires",
              "depends_on",
              "monitors",
              "analyzes",
              "reports_to",
              "aligned_with",
              "governed_by",
              "controlled_by",
              "secured_by",
              "assessed_by",
              "tracks",
              "derives_from",
              "contributes_to",
              "relates_to",
              "affects"
            ]
          },
          "metadata": {
            "type": "object",
            "properties": {
              "strength": {
                "type": "string",
                "enum": ["strong", "moderate", "weak"]
              },
              "confidence": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              },
              "impact": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "direction": {
                "type": "string",
                "enum": ["unidirectional", "bidirectional"]
              },
              "description": {
                "type": "string",
                "maxLength": 500
              }
            }
          }
        }
      }
    }
  }
}
