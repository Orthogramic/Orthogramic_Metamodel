{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Strategic Response Model",
  "description": "Schema for defining strategic responses to triggers or strategic intents, supported by rationales and measured by performance indicators.",
  "definitions": {
    "strategicResponse": {
      "type": "object",
      "properties": {
        "responseID": {
          "type": "string",
          "description": "A unique identifier for the strategic response"
        },
        "responseTitle": {
          "type": "string",
          "description": "A short title summarising the response"
        },
        "responseType": {
          "type": "string",
          "description": "The classification of the response",
          "enum": [
            "Policy_Change", "Capability_Development", "Initiative_Launch", 
            "Process_Improvement", "Technology_Implementation", "Organizational_Change",
            "Market_Entry", "Market_Exit", "Competitive_Response", "Product_Innovation", 
            "Repositioning", "Market_Expansion", "Defensive_Action", "Partnership_Strategy", 
            "Pricing_Strategy", "Channel_Strategy", "Cost_Optimization", "Investment_Strategy",
            "Capital_Structure_Change", "Financial_Risk_Management", "Budget_Reallocation",
            "Funding_Strategy", "Revenue_Enhancement", "Working_Capital_Management",
            "Financial_Restructuring", "Risk_Prevention", "Risk_Mitigation", "Risk_Transfer",
            "Risk_Acceptance", "Control_Enhancement", "Incident_Response", "Business_Continuity",
            "Compliance_Program", "Risk_Governance", "Network_Redesign", "Supplier_Change",
            "Inventory_Strategy", "Logistics_Optimization", "Technology_Implementation",
            "Process_Improvement", "Risk_Mitigation", "Cost_Reduction", "Service_Enhancement",
            "Sustainability_Initiative", "Customer_Experience_Initiative", "Customer_Retention_Program",
            "Customer_Acquisition_Campaign", "Customer_Journey_Redesign", "Customer_Segment_Strategy",
            "Customer_Insight_Application", "Customer_Technology_Implementation",
            "Innovation_Program", "Innovation_Culture_Change", "Innovation_Capability_Building",
            "Portfolio_Adjustment", "Experimentation_Framework", "Idea_Management_Enhancement",
            "Environmental_Initiative", "Social_Program", "Governance_Enhancement", 
            "Climate_Adaptation", "Sustainability_Reporting_Improvement", "Talent_Initiative", 
            "Culture_Change_Program", "Leadership_Development", "Knowledge_Retention_Program",
            "Workforce_Restructuring", "Technology_Modernization", "Security_Remediation", 
            "Technology_Standardization", "Platform_Consolidation", "Digital_Transformation",
            "Channel_Expansion", "Channel_Consolidation", "Partner_Strategy_Change", 
            "Distribution_Network_Redesign", "Omnichannel_Integration", "Channel_Mix_Optimization"
          ]
        },
        "responseDescription": {
          "type": "string",
          "description": "Detailed description of the strategic response, its objectives, and scope"
        },
        "triggerReferences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of triggerIDs that initiated this strategic response"
        },
        "intentReferences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of strategic intentIDs that initiated this response"
        },
        "rationaleReferences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of rationaleIDs providing justification for this response"
        },
        "performanceIndicatorReferences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Metrics or KPIs that will be used to measure the success of the strategic response"
        },
        "affectedDomains": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Strategy", "Capabilities", "Initiatives", "Policy", 
              "Performance", "Information", "Value Stream", "Customer", 
              "Market", "Finance", "Risk Management", "Supply Chain", 
              "Innovation", "Sustainability", "People", "Technology", "Channel"
            ]
          },
          "description": "Business architecture domains impacted by this response"
        },
        "impactedUnits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "orgUnitTitle": {
                "type": "string",
                "description": "Name of the organization unit"
              },
              "relationshipRole": {
                "type": "string",
                "enum": [
                  "Owning unit", "Providing unit", "Consuming unit", 
                  "Utilising unit", "Custodian unit", "Dependent unit", 
                  "Supported unit", "Governing unit"
                ],
                "description": "Role the unit plays in relation to this response"
              },
              "relationshipStrength": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "description": "Strength of the relationship on a scale from 1 (very weak) to 5 (very strong)"
              }
            },
            "required": ["orgUnitTitle", "relationshipRole"]
          },
          "description": "Organization units impacted by this response and their roles"
        },
        "implementationPlan": {
          "type": "string",
          "description": "Reference or description of the plan outlining how the response will be executed"
        },
        "expectedOutcomes": {
          "type": "string",
          "description": "Anticipated results or benefits from implementing the response"
        },
        "responsibleOrgUnits": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Organization units accountable for executing the strategic response"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "The planned start date for implementing the strategic response"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "The planned completion date for the strategic response"
        },
        "status": {
          "type": "string",
          "enum": ["Planned", "In_Progress", "Completed", "Deferred", "Cancelled"],
          "description": "The current status of the strategic response"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date",
          "description": "The date when the strategic response record was last updated"
        },
        "strategicThemes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Organizational strategic priorities this response supports"
        },
        "alignmentStrength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5,
          "description": "How closely the response aligns with organizational strategy (1-5)"
        },
        "adjacentInitiatives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Related initiatives that complement or support this response"
        },
        "strategicLevers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Scale", "Scope", "Differentiation", "Innovation", "Efficiency", "Resilience", "Other"]
          },
          "description": "Business mechanisms being utilized to effect change"
        },
        "strategicHorizon": {
          "type": "string",
          "enum": ["Horizon_1", "Horizon_2", "Horizon_3"],
          "description": "Categorization of the strategic timeframe (H1: 0-18 months, H2: 18-36 months, H3: 36+ months)"
        },
        
        /* Domain-specific extensions */
        
        "customerSegmentIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Customer segments this response targets (Customer domain)"
        },
        "customerOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the customer outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific customer outcomes resulting from this response (Customer domain)"
        },
        "customerExperienceChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "journeyStageID": {
                "type": "string",
                "description": "ID of the customer journey stage affected"
              },
              "changeDescription": {
                "type": "string",
                "description": "Description of the change to the journey stage"
              },
              "expectedImpact": {
                "type": "string",
                "description": "Expected impact of the change"
              }
            },
            "required": ["changeDescription"]
          },
          "description": "Specific changes to customer experience (Customer domain)"
        },
        "customerFeedbackMechanism": {
          "type": "string",
          "description": "How customer feedback will be collected (Customer domain)"
        },
        
        "marketIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Markets this response addresses (Market domain)"
        },
        "competitorIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Competitors this response addresses (Market domain)"
        },
        "competitiveAdvantage": {
          "type": "object",
          "properties": {
            "advantageType": {
              "type": "string",
              "enum": ["cost", "differentiation", "focus", "innovation", "other"],
              "description": "Type of competitive advantage created"
            },
            "description": {
              "type": "string",
              "description": "Description of the competitive advantage"
            },
            "sustainability": {
              "type": "string",
              "enum": ["short-term", "medium-term", "long-term"],
              "description": "Expected duration of advantage"
            }
          },
          "description": "Competitive advantage created or enhanced (Market domain)"
        },
        "marketPositionChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "marketID": {
                "type": "string",
                "description": "ID of the market"
              },
              "changeDescription": {
                "type": "string",
                "description": "Description of market position change"
              }
            },
            "required": ["changeDescription"]
          },
          "description": "Specific changes to market position (Market domain)"
        },
        "competitiveMonitoring": {
          "type": "object",
          "properties": {
            "monitoringApproach": {
              "type": "string",
              "description": "Approach to monitoring competitive reactions"
            },
            "keyIndicators": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Key indicators being monitored"
            }
          },
          "description": "How competitive reactions will be monitored (Market domain)"
        },
        
        "financeIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Financial elements this response addresses (Finance domain)"
        },
        "financialOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the financial outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              },
              "realizationTimeline": {
                "type": "string",
                "description": "Timeline for realizing this outcome"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific financial outcomes resulting from this response (Finance domain)"
        },
        "financialResources": {
          "type": "object",
          "properties": {
            "budgetRequired": {
              "type": "number",
              "description": "Budget amount required for this response"
            },
            "fundingSources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "sourceName": {
                    "type": "string",
                    "description": "Name of funding source"
                  },
                  "amount": {
                    "type": "number",
                    "description": "Amount from this source"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["secured", "pending", "proposed"],
                    "description": "Status of this funding"
                  }
                },
                "required": ["sourceName"]
              },
              "description": "Sources of funding for this response"
            }
          },
          "description": "Resources required for this response (Finance domain)"
        },
        "financialRiskAssessment": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "riskDescription": {
                "type": "string",
                "description": "Description of financial risk"
              },
              "potentialImpact": {
                "type": "number",
                "description": "Potential monetary impact"
              },
              "likelihood": {
                "type": "string",
                "description": "Likelihood of this risk"
              },
              "mitigationStrategy": {
                "type": "string",
                "description": "Strategy to mitigate this risk"
              }
            },
            "required": ["riskDescription"]
          },
          "description": "Assessment of financial risks (Finance domain)"
        },
        "financialReviewMechanism": {
          "type": "string",
          "description": "How financial performance will be reviewed (Finance domain)"
        },
        
        "riskIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Risk elements this response addresses (Risk Management domain)"
        },
        "implementedControls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "controlName": {
                "type": "string",
                "description": "Name of the control"
              },
              "controlDescription": {
                "type": "string",
                "description": "Description of the control"
              },
              "controlType": {
                "type": "string",
                "enum": ["preventive", "detective", "corrective", "directive"],
                "description": "Type of control"
              },
              "implementationStatus": {
                "type": "string",
                "enum": ["planned", "in-progress", "implemented", "verified"],
                "description": "Status of control implementation"
              }
            },
            "required": ["controlName", "controlDescription"]
          },
          "description": "Risk controls implemented by this response (Risk Management domain)"
        },
        "riskMonitoring": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "monitoringMethod": {
                "type": "string",
                "description": "Method for monitoring risk"
              },
              "keyIndicators": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Key indicators being monitored"
              },
              "frequency": {
                "type": "string",
                "description": "Frequency of monitoring"
              }
            },
            "required": ["monitoringMethod"]
          },
          "description": "Ongoing risk monitoring approaches (Risk Management domain)"
        },
        "residualRiskAssessment": {
          "type": "string",
          "description": "Assessment of risk remaining after response (Risk Management domain)"
        },
        
        "supplyChainIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Supply chain elements this response addresses (Supply Chain domain)"
        },
        "supplyChainOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the supply chain outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              },
              "measurementApproach": {
                "type": "string",
                "description": "How this outcome will be measured"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific supply chain outcomes resulting from this response (Supply Chain domain)"
        },
        "supplyChainChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "changeType": {
                "type": "string",
                "enum": ["network", "process", "supplier", "inventory", "logistics", "technology"],
                "description": "Type of supply chain change"
              },
              "changeDescription": {
                "type": "string",
                "description": "Description of the change"
              },
              "implementationApproach": {
                "type": "string",
                "description": "Approach to implementing this change"
              }
            },
            "required": ["changeDescription"]
          },
          "description": "Specific changes to supply chain configuration (Supply Chain domain)"
        },
        "supplyChainRisks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "riskDescription": {
                "type": "string",
                "description": "Description of supply chain risk"
              },
              "likelihood": {
                "type": "string",
                "enum": ["low", "moderate", "high", "very-high"],
                "description": "Likelihood of this risk"
              },
              "impact": {
                "type": "string",
                "enum": ["minor", "moderate", "significant", "severe"],
                "description": "Impact if this risk materializes"
              },
              "mitigationStrategy": {
                "type": "string",
                "description": "Strategy to mitigate this risk"
              }
            },
            "required": ["riskDescription"]
          },
          "description": "Risks related to the supply chain response (Supply Chain domain)"
        },
        "stakeholderEngagement": {
          "type": "object",
          "properties": {
            "keyStakeholders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "stakeholderName": {
                    "type": "string",
                    "description": "Name of stakeholder"
                  },
                  "stakeholderType": {
                    "type": "string",
                    "enum": ["supplier", "customer", "partner", "regulator", "internal"],
                    "description": "Type of stakeholder"
                  },
                  "engagementApproach": {
                    "type": "string",
                    "description": "How this stakeholder will be engaged"
                  }
                },
                "required": ["stakeholderName", "stakeholderType"]
              },
              "description": "Key stakeholders for this response"
            }
          },
          "description": "Approach to engaging key stakeholders (Supply Chain domain)"
        },
        
        "innovationIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Innovation elements this response addresses (Innovation domain)"
        },
        "innovationOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the innovation outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              },
              "measurementApproach": {
                "type": "string",
                "description": "How this outcome will be measured"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific innovation outcomes resulting from this response (Innovation domain)"
        },
        "innovationCapabilityChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "capabilityArea": {
                "type": "string",
                "description": "Area of innovation capability"
              },
              "changeDescription": {
                "type": "string",
                "description": "Description of the capability change"
              },
              "expectedImpact": {
                "type": "string",
                "description": "Expected impact of the change"
              }
            },
            "required": ["capabilityArea", "changeDescription"]
          },
          "description": "Changes to innovation capabilities (Innovation domain)"
        },
        "experimentationApproach": {
          "type": "object",
          "properties": {
            "methodologyName": {
              "type": "string",
              "description": "Name of experimentation methodology"
            },
            "keyMechanisms": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Key mechanisms for experimentation"
            },
            "feedbackLoops": {
              "type": "string",
              "description": "How feedback is collected and processed"
            }
          },
          "description": "How concepts will be tested (Innovation domain)"
        },
        "portfolioImpact": {
          "type": "object",
          "properties": {
            "balanceShift": {
              "type": "string",
              "description": "How portfolio balance will shift"
            },
            "resourceReallocation": {
              "type": "string",
              "description": "How resources will be reallocated"
            }
          },
          "description": "How innovation portfolio is affected (Innovation domain)"
        },
        
        "sustainabilityIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Sustainability elements this response addresses (Sustainability domain)"
        },
        "environmentalOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the environmental outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              },
              "baselineValue": {
                "type": "string",
                "description": "Current baseline value"
              },
              "measurementApproach": {
                "type": "string",
                "description": "How this outcome will be measured"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific environmental outcomes from this response (Sustainability domain)"
        },
        "socialOutcomes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "outcomeDescription": {
                "type": "string",
                "description": "Description of the social outcome"
              },
              "targetValue": {
                "type": "string",
                "description": "Target value for this outcome"
              },
              "measurementApproach": {
                "type": "string",
                "description": "How this outcome will be measured"
              }
            },
            "required": ["outcomeDescription"]
          },
          "description": "Specific social outcomes from this response (Sustainability domain)"
        },
        "stakeholderExpectations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "stakeholderGroup": {
                "type": "string",
                "description": "Stakeholder group with expectation"
              },
              "expectationDescription": {
                "type": "string",
                "description": "Description of the expectation"
              },
              "responseApproach": {
                "type": "string",
                "description": "How the expectation will be addressed"
              }
            },
            "required": ["stakeholderGroup", "expectationDescription"]
          },
          "description": "Stakeholder expectations being addressed (Sustainability domain)"
        },
        "complianceRequirements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "regulationName": {
                "type": "string",
                "description": "Name of regulation or requirement"
              },
              "complianceApproach": {
                "type": "string",
                "description": "How compliance will be achieved"
              }
            },
            "required": ["regulationName"]
          },
          "description": "Sustainability compliance requirements addressed (Sustainability domain)"
        },
        "climateScenarioConsiderations": {
          "type": "object",
          "properties": {
            "scenarioTypes": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Types of climate scenarios considered"
            },
            "timeHorizons": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Time horizons evaluated"
            },
            "adaptationMeasures": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Adaptation measures included"
            }
          },
          "description": "Climate scenarios factored into response (Sustainability domain)"
        },
        
        "peopleIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "People elements this response addresses (People domain)"
        },
        "workforceChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "changeArea": {
                "type": "string",
                "description": "Area of workforce change"
              },
              "changeDescription": {
                "type": "string",
                "description": "Description of the change"
              },
              "implementationApproach": {
                "type": "string",
                "description": "Approach to implementing this change"
              },
              "expectedImpact": {
                "type": "string",
                "description": "Expected impact of the change"
              }
            },
            "required": ["changeArea", "changeDescription"]
          },
          "description": "Specific workforce changes implemented (People domain)"
        },
        "culturalDevelopment": {
          "type": "object",
          "properties": {
            "focusAreas": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Areas of cultural focus"
            },
            "developmentApproaches": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Approaches to cultural development"
            },
            "measurementMechanisms": {
              "type": "string",
              "description": "How cultural change will be measured"
            }
          },
          "description": "Cultural development initiatives (People domain)"
        },
        "talentDevelopmentApproach": {
          "type": "object",
          "properties": {
            "developmentMethodology": {
              "type": "string",
              "description": "Methodology for talent development"
            },
            "keyPrograms": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Key development programs"
            },
            "evaluationApproach": {
              "type": "string",
              "description": "How development will be evaluated"
            }
          },
          "description": "Approach to talent development (People domain)"
        },
        "knowledgeManagementStrategy": {
          "type": "object",
          "properties": {
            "knowledgeAreas": {
              "type": "array",
              "items": {
                "type": "string"
