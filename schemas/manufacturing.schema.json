          "items": {
            "type": "object",
            "attributes": {
              "item": {
                "type": "string"
              },
              "quantity": {
                "type": "integer"
              },
              "unit": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["bomID", "productReference", "items"],
      "additionalProperties": false
    },
    "Inventory": {
      "type": "object",
      "description": "The stock of raw materials, work-in-progress, and finished goods.",
      "attributes": {
        "materialReference": {
          "type": "string",
          "description": "A link to the 'Material' or 'Product' element in the metamodel.",
