      "type": "array",
      "description": "Specific objectives supporting the manufacturing strategy.",
      "items": {
        "$ref": "#/elements/ManufacturingObjective"
      }
    },
    "keyActivities": {
      "type": "string",
      "description": "Critical implementation actions for the manufacturing plan."
    },
