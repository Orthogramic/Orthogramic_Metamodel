        },
        "quantity": {
          "type": "integer",
          "description": "The amount of the item currently in stock.",
          "examples": [5000]
        },
        "warehouseLocation": {
          "type": "string",
          "description": "The physical location of the inventory.",
          "examples": ["Warehouse 3, Shelf A"]
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the last inventory update.",
          "examples": ["2025-08-04T12:00:00Z"]
        }
      },
      "required": ["materialReference", "quantity"],
      "additionalProperties": false
    },
    "ManufacturingObjective": {
      "type": "object",
