          "examples": ["Engine Assembly Line 1", "Plastics Molding Department"]
        },
        "unitType": {
          "type": "string",
          "description": "The type of production unit.",
          "enum": [
            "ASSEMBLY",
            "FABRICATION",
            "CHEMICAL_PROCESSING"
          ]
        },
        "location": {
